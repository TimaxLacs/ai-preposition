# AI API Configuration
AI_PROVIDER=groq  # groq, huggingface, together, openrouter (выберите позже)
GROQ_API_KEY=gsk_your_key_here

# Telegram Configuration
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=1234567890abcdef1234567890abcdef
TELEGRAM_PHONE=+79001234567
TELEGRAM_OUTPUT_CHANNEL=@your_filtered_channel

# VK Configuration
VK_TOKEN=vk1.a.your_token_here
VK_OUTPUT_GROUP_ID=-123456789

# PostgreSQL Database (ОБЯЗАТЕЛЬНО)
# Для Docker Compose (по умолчанию):
DATABASE_URL=postgresql+asyncpg://ai_user:ai_password@localhost:5432/ai_preposition
# Для локального PostgreSQL (если не используете Docker):
# DATABASE_URL=postgresql+asyncpg://ai_user:your_password@localhost:5432/ai_preposition

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# API Configuration
API_SECRET_KEY=change-this-to-random-string-in-production
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs

# Filter Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=30

# Application Settings
CHECK_INTERVAL=60
ENABLE_DEDUPLICATION=true
CACHE_TTL_HOURS=24

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
